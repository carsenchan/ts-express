{
  "name": "ts-express",
  "version": "1.0.0",
  "description": "Express API with Typescript",
  "main": "/src/index.js",
  "scripts": {
    "server-dev": "nodemon",
    "server-clean": "rm -rf dist",
    "server": "node dist/index.js",
    "server-install": "npm install",
    "server-build": "tsc",
    "server-run": "concurrently \"yarn server-build && yarn server\"",
    "client-install": "npm install --prefix client-user",
    "client-build": "npm run build --prefix client-user",
    "client-run": "",
    "app-install": "concurrently \"yarn server-install && yarn client-install\" ",
    "app-build": "concurrently \"yarn server-build && yarn client-build\"",
    "app-run": "concurrently \"yarn server-run && yarn client-build\"",
    "swagger": "node ./node_modules/tsoa/dist/cli.js swagger",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Carsen Chan",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/mongodb": "^3.1.20",
    "@types/mongoose": "^5.3.20",
    "@types/morgan": "^1.7.35",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "file-stream-rotator": "^0.4.1",
    "mongoose": "^5.4.17",
    "morgan": "^1.9.1",
    "socket.io": "^2.2.0",
    "tsoa": "^2.3.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/node": "^11.10.4",
    "@types/socket.io": "^2.1.2",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  }
}
